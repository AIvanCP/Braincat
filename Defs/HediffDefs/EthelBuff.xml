<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Ethel Plush Buff Hediff -->
	<HediffDef>
		<defName>EthelBuff_Hediff</defName>
		<label>encouraged by Ethel</label>
		<description>This pawn has been blessed by the divine meow of the Ethel Plush. They feel encouraged and motivated to work harder.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 0.9, 1.0)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<statOffsets>
					<MoveSpeed>0.05</MoveSpeed>
					<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>5000</disappearsAfterTicks>
			</li>
		</comps>
	</HediffDef>

	<!-- Thought for mood bonus -->
	<ThoughtDef>
		<defName>EthelBuff_Thought</defName>
		<thoughtClass>Thought_Memory</thoughtClass>
		<durationDays>0.83</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>encouraged by Ethel Plush</label>
				<description>The divine meow of the Ethel Plush has blessed me. I feel motivated!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>
